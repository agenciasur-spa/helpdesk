---
const {
  title = "title",
  text = "text",
  btnUrl = "#",
  btnText = "Ver mÃ¡s",
  col = "col-md-3",
  icon = "lightbulb", // "headset", "lightbulb", "shield"
} = Astro.props;

import HeadsetIcon from "lucide-static/icons/Headset.svg";
import LightbulbIcon from "lucide-static/icons/Lightbulb.svg";
import ShieldIcon from "lucide-static/icons/Shield.svg";

const getIcon = () => {
  switch (icon) {
    case "lightbulb":
      return LightbulbIcon;
    case "shield":
      return ShieldIcon;
    case "headset":
    default:
      return HeadsetIcon;
  }
};

const IconSvg = getIcon();
---

<!-- src/components/ui/Card.astro -->
<div class={col}>
  <div class="featured-card card border-0 rounded-4 p-3 text-center h-100">
    <div class="card-img-top p-3">
      <img
        src="https://picsum.photos/200/200"
        class="img-fluid rounded-4"
        alt="Aire acondicionado de ventana"
      />
    </div>
    <div
      class="card-body d-flex flex-column align-items-center justify-content-center pt-3 pb-4"
    >
      <h4 class="card-title fw-semibold mb-3 text-primary">
        {title}
      </h4>

      <p class="card-text text-muted mb-4">
        {text}
      </p>

      <a href={btnUrl} class="btn btn-primary rounded-pill px-5">
        {btnText}
      </a>
    </div>
  </div>
</div>
