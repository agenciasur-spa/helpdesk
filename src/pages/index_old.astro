---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';
import data from '../content/helpdesk-data.json';

const { categories } = data;
---

<Layout>
  <Navbar />
  <main class="container py-5">
    <h1 class="mb-4">Centro de Ayuda en helpdesk</h1>
    <p class="lead mb-5">Encuentra soluciones y servicios por categor√≠a.</p>

    <div class="row g-4">
      {categories.map(category => (
        <div class="col-md-6" key={category.slug}>
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">{category.title}</h5>
              <p class="card-text">{category.description}</p>
              <a href={`/helpdesk/category/${category.slug}/`} class="btn btn-primary">Explorar</a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </main>
  <Footer />
</Layout>